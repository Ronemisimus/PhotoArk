# Application Port
PORT=3000

# PostgreSQL Database Configuration
DB_HOST=db
DB_PORT=5432
DB_USER=admin
DB_PASSWORD=your_super_secret_password
DB_NAME=photoark_db

# S3-Compatible Storage Configuration (for development using MinIO)
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=photos
S3_REGION=us-east-1 # MinIO doesn't care, but the AWS SDK requires it.

# MinIO Admin Credentials (for docker-compose)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# AI Service Endpoint
AI_SERVICE_URL=http://localhost:8001